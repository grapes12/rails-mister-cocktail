<div class="container-mine">
<h1><%= @cocktail.name %>
</h1>

<div class="ingredients mt-5">
  <h3>Ingredients:</h3>
  <ul><% @cocktail.ingredients.each do |ingredient| %>
    <div class="list-item">
    <li><%= ingredient.name %>: <% ingredient.doses.each do |dose| %>
      <%= dose.description %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  do %>
      <i class="fas fa-trash delete"></i>
      <% end %>
    <% end %>
    </li>
    </div>
  <% end %>
  </ul>
  <p class="mt-5"><%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-dark"  %></p>
</div>

<p><%= link_to "Delete This Cocktail", @cocktail, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %></p>
<p class='back-to-all'><%= link_to "Back to all", cocktails_path%></p>
</div>
